<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/ivTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.8"
        android:background="#FF0000"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFullMovies"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivimage_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/image_1" />

            <ImageView
                android:id="@+id/ivtext_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/text_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTvShows"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivimage_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/image_2" />

            <ImageView
                android:id="@+id/ivtext_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/text_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMusicVideos"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivimage_3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/image_3" />

            <ImageView
                android:id="@+id/ivtext_3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/text_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPeople"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivimage_4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/image_4" />

            <ImageView
                android:id="@+id/ivtext_4"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:scaleType="centerInside"
                android:src="@drawable/text_4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>