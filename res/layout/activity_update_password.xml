<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wholeUpdatePasswordScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/updatePasswordHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/llTopUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/crossButtonUpdatePassword"
                android:layout_alignParentLeft="true"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="Update Password"
                android:textColor="#B40404"
                android:textSize="18sp"
                android:textStyle="bold" >
            </TextView>

            <ImageView
                android:id="@+id/crossButtonUpdatePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_marginLeft="-20dp"
                android:src="@drawable/cross" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9"
        android:background="#E6E6E6"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvOldPass"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Enter old password"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/oldpass"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_border"
                android:hint="Old Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#848484" />

            <TextView
                android:id="@+id/tvNewPass"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Enter new password"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/newpass"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_border"
                android:hint="New Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#848484" />

            <TextView
                android:id="@+id/tvConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Comfirm new password"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/confirmnewpass"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_border"
                android:hint="Confirm Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#848484" />

            <Button
                android:id="@+id/updatepassbtn"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#B40404"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="UPDATE PASSWORD"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>